<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/material_primary</item>
        <item name="colorPrimary">@color/material_primary</item>

        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/material_primary_dark
        </item>
        <item name="colorPrimaryDark">@color/material_primary_dark</item>

        <item name="android:colorAccent" tools:ignore="NewApi">@color/material_accent</item>
        <item name="colorAccent">@color/material_accent</item>

        <item name="android:textColor">@color/material_text_primary</item>

        <item name="android:textColorLink">@color/material_primary_dark</item>

    </style>

    <style name="TextBody" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:maxEms">60</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TextHeadline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:height">72dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextSubhead" parent="Base.TextAppearance.AppCompat.Subhead" />

    <style name="TextCaption" parent="Base.TextAppearance.AppCompat.Caption" />
</resources>