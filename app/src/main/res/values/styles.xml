<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GreenTheme" parent="AndroidHoloColorsTheme">
        <item name="selectableItemBackground">@drawable/selectable_bg</item>
        <item name="android:selectableItemBackground" tools:ignore="NewApi">
            @drawable/selectable_bg
        </item>


        <item name="dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>

        <item name="actionDropDownStyle">@style/MyDropDownNav</item>
        <item name="android:actionDropDownStyle" tools:ignore="NewApi">@style/MyDropDownNav</item>

        <item name="android:textColorLink">@color/linkTextColor</item>
    </style>

    <!--based on http://android-developers.blogspot.de/2011/04/customizing-action-bar.html-->
    <!-- style the list navigation -->
    <style name="MyDropDownNav" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/selectable_bg</item>
    </style>


    <!-- style the items within the overflow menu -->
    <style name="MyDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_bg</item>
    </style>


</resources>