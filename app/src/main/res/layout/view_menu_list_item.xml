<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/elementMargin"
                android:paddingRight="@dimen/elementMargin"
                android:minHeight="48dp"
                android:background="@drawable/selectable_list_item"
                android:paddingTop="@dimen/elementMargin">


    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Gegrillter Lachs im Schinkenmantel auf Gemüsegyros"/>


    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textName"
        android:layout_marginBottom="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text_default_material_light"
        tools:text="1,20€"/>

    <TextView
        android:id="@+id/textPricePer100g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_alignBaseline="@+id/textPrice"
        android:layout_toRightOf="@+id/textPrice"
        android:layout_toLeftOf="@+id/textBadges"
        android:layout_marginRight="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text_default_material_light"
        tools:text="/100g"/>

    <TextView
        android:orientation="horizontal"
        android:id="@+id/textBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textName"
        android:layout_marginBottom="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text_default_material_light"
        tools:text="badges"/>

</RelativeLayout>
