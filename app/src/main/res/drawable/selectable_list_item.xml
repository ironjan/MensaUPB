<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- based on https://developer.android.com/training/basics/actionbar/styling.html#CustomTabs-->
    <!-- STATES WHEN BUTTON IS NOT PRESSED -->


    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/bright_foreground_material_dark"/>
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/bright_foreground_material_dark"/>

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/focusedSelectable"/>
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@color/focusedSelectable"/>


    <!-- STATES WHEN BUTTON IS PRESSED -->

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true" android:drawable="@color/pressedSelectable"/>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="true" android:drawable="@color/pressedSelectable"/>

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="true" android:drawable="@color/focusedSelectable"/>
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="true" android:drawable="@color/focusedSelectable"/>
</selector>