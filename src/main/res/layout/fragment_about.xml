<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/elementMargin"
    tools:context="de.ironjan.mensaupb.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutText"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="16dp" android:text="Open Source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView android:layout_marginTop="@dimen/elementMargin"
            android:layout_width="match_parent"
            android:id="@+id/txtDependencies"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>