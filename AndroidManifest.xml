<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.najidev.mensaupb"
    >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
        android:name=".MensaUpbApplication_"
        android:icon="@drawable/icon"
        android:label="@string/app_name" android:allowBackup="false"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:uiOptions="splitActionBarWhenNarrow"
            android:name="de.najidev.mensaupb.activities.Menus_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="de.najidev.mensaupb.activities.About_"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"/>

        <!--sync-->
        <service android:name="de.najidev.mensaupb.sync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>
        <provider
            android:authorities="de.najidev.mensaupb.provider"
            android:name=".sync.MenuContentProvider_"
            android:exported="false"
            android:syncable="true"/>
        <service
            android:name="de.najidev.mensaupb.sync.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter"/>
        </service>
    </application>

</manifest>